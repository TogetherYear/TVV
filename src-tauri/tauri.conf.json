{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Application",
    "version": "0.1.0",
    "identifier": "com.tauri.build",
    "build": {
        "frontendDist": "../Dist",
        "devUrl": "http://localhost:6768",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "width": 1000,
                "height": 560,
                "resizable": true,
                "title": "Application",
                "decorations": false,
                "focus": false,
                "label": "Application",
                "transparent": true,
                "url": "/#/Application",
                "visible": false,
                "shadow": false
            },
            {
                "resizable": false,
                "title": "Tray",
                "decorations": false,
                "focus": false,
                "label": "Tray",
                "transparent": true,
                "url": "/#/Tray",
                "visible": false,
                "alwaysOnTop": true,
                "shadow": false,
                "skipTaskbar": true
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "resources": [
            "./Extra"
        ],
        "windows": {
            "webviewInstallMode": {
                "silent": true,
                "type": "downloadBootstrapper"
            },
            "wix": {
                "language": "zh-CN"
            },
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "installMode": "perMachine"
            },
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256"
        },
        "targets": "all",
        "icon": [
            "icons/icon.ico"
        ]
    }
}